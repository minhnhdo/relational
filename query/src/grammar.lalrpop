use crate::ast::Literal;
use crate::ast::string::parse_sql_string;
use lalrpop_util::ParseError;

grammar;

pub String: Literal = {
    "'" <s:r"(''|[^'])*"> "'" =>? parse_sql_string(s)
        .map(Literal::String)
        .map_err(|e| ParseError::User {
            error: e.message(),
        }),
};
